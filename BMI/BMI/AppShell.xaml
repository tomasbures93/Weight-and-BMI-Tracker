<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BMI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BMI"
    Shell.FlyoutBehavior="Flyout"
    Title="BMI Calculator">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Charts"
        ContentTemplate="{DataTemplate local:Charts}"
        Route="Charts" />
    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate local:Setup}"
        Route="Setup" />
    <ShellContent
        Title="BMI"
        ContentTemplate="{DataTemplate local:BMI}"
        Route="BMI" />
</Shell>
