<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMI.MainPage"
             Title="Home">
    <Grid RowDefinitions="100, 100, 10, 100, *, Auto, Auto, Auto" ColumnDefinitions="*, *" Padding="10, 10, 10, 10">
            <Label 
                x:Name="welcomeMessage"
                Text="Welcome, User!"
                FontSize="28"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"/>
            <Label 
                x:Name="BMI"
                Text="25.4"
                FontSize="32"
                FontAttributes="Bold"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"/>
            <ProgressBar 
                x:Name="Progress"
                Margin="20, 10,  20, 10"
                Progress="0.5"
                ProgressColor="Red"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"/>
            <Label 
                x:Name="BMItip"
                Text="Tip"
                Margin="10, 60,  20, 10"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"/>
            <Button 
                x:Name="addWeight"
                Text="Add Weight"
                Margin="20, 5,  20, 10"
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"/>
            <Button 
                x:Name="changeSetting"
                Clicked="NavigateToSetup"
                Text="Change Setting"
                Margin="20, 5,  20, 10"
                VerticalOptions="End"
                Grid.Row="6"
                Grid.Column="0"
                Grid.ColumnSpan="2"/>
        <!-- That has to be deleted later!!! When DataBinding done -->
            <Button 
                x:Name="refresh"
                Clicked="Refresh"
                Text="Refresh info"
                Margin="20, 5,  20, 10"
                VerticalOptions="End"
                Grid.Row="7"
                Grid.Column="0"
                Grid.ColumnSpan="2"/>
        </Grid>
</ContentPage>