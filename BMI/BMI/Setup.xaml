<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"              
             x:Class="BMI.Setup"
             Title="Setup">
    <!-- xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"  - Adds Community toolkit to XAML-->
    <VerticalStackLayout Padding="10, 10, 10, 10">
        <Grid RowDefinitions="*, *, *, *, *, *, *, *, *, *, *" ColumnDefinitions="*, *">
            <Label 
                Text="Username"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="16"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,20,20,0"/>
            <Entry 
                x:Name="UsernameInput"
                Placeholder="" 
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,0,20,0"/>
            <CheckBox 
                x:Name="Male"
                IsChecked="False"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Margin="0,30,0,0"
                Grid.Row="2"
                Grid.Column="0"
                CheckedChanged="OnChangeBoxChange"
                />
            <CheckBox 
                x:Name="Female"
                IsChecked="False"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Margin="0,30,0,0"
                Grid.Row="2"
                Grid.Column="1"
                CheckedChanged="OnChangeBoxChange"
                />
            <Label Text="Male" 
                   FontSize="20"
                   Grid.Row="3"
                   Grid.Column="0"
                   Margin="0,0,0,30"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" />
            <Label  Text="Female" 
                    FontSize="20"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="0,0,0,30"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
            <Label 
                Text="Weight"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="16"
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,20,20,0"/>
            <Entry 
                x:Name="WeightInput"
                Keyboard="Numeric"
                Placeholder="75 kg" 
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,0,20,0"/>
            <Label 
                Text="Height"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="16"
                Grid.Row="6"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,20,20,0"/>
            <Entry 
                x:Name="HeightInput"
                Keyboard="Numeric"
                Placeholder="174 cm" 
                Grid.Row="7"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,0,20,0"/>
            <Label 
                Text="Age"
                VerticalOptions="Center" 
                HorizontalOptions="Start" 
                FontSize="16"
                Grid.Row="8"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,20,20,0"/>
            <Entry 
                x:Name="AgeInput"
                Keyboard="Numeric"
                Placeholder="25" 
                Grid.Row="9"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,0,20,0"/>
            <Button 
                    x:Name="SavingData"
                    Text="Save" 
                    VerticalOptions="End" 
                    Grid.Row="10"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="20,30,20,0"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>